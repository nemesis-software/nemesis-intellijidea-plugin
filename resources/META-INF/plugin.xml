<idea-plugin>
    <id>com.nemesis.platform.nemesis-idea-plugin</id>
    <name>Nemesis Plugin for IntelliJIDEA</name>
    <version>1.0</version>
    <vendor email="support@nemesis.io" url="http://www.nemesis.io">Nemesis Software</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->


    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceInterface="com.nemesis.intellijdea.plugin.ConfigurationService"
                            serviceImplementation="com.nemesis.intellijdea.plugin.ConfigurationService"/>

        <applicationConfigurable id="NemesisPlugin.SettingsConfigurable" parentId="root"
                                 instance="com.nemesis.intellijdea.plugin.NemesisSettingsConfigurable"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.nemesis.intellijidea.plugin.action.CsvImportAction" class="com.nemesis.intellijdea.plugin.CsvImportAction"
                text="Import Csv" description="Imports the current CSV into the configured Nemesis endpoint."
                icon="/icons/logo.png">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <add-to-group group-id="ToolbarRunGroup" anchor="after" relative-to-action="Stop"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl I"/>
        </action>
    </actions>

</idea-plugin>